#!/bin/sh

set -e

CURRENT_DIR="$(dirname "${0:-}")"
BUILDPACK_HOME="$(cd "$CURRENT_DIR/.." || exit; pwd)"

echo "DEBUG: \$0: $0"
echo "DEBUG: CURRENT_DIR: $CURRENT_DIR"
echo "DEBUG: BUILDPACK_HOME: $BUILDPACK_HOME"

# shellcheck source=lib/all.sh
. "$BUILDPACK_HOME/lib/all.sh"

BUILD_DIR="${1:-}"

cd "${BUILD_DIR}"

download
verify_checksum
install
